{
    "compilerOptions": {
      "declaration": true,
      "outDir": "./dist",
      "sourceMap": false,
      "skipLibCheck": true,
      "module": "commonjs",
      "target": "es2017",
      "jsx": "react",
      "moduleResolution": "node",
      "lib": ["dom", "es2017"],
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "strictBindCallApply": true,
      "strictPropertyInitialization": true,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "baseUrl": ".",
      "preserveConstEnums": true
    },

    "include": [
        "./src/**/*",
        "./types/**/*.d.ts"
    ]
}

